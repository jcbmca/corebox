# Maintainer: 

pkgname=corebox-git
pkgver=r19.25bacca
pkgrel=1
pkgdesc="Combination of some common desktop apps with Bookmark"
arch=('x86_64')
url="https://github.com/rahmanshaber/corebox"
license=('unkown')
depends=('libmagick' 'qt5-base' 'qt5-multimedia' 'qt5-charts' 'qt5-x11extras' 'engrampa')
makedepends=('git' )
provides=('corebox')
conflicts=('corebox')
source=("${pkgname}::git+https://github.com/rahmanshaber/corebox.git")
md5sums=('SKIP')

pkgver() {
  cd ${pkgname}
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

prepare() {
  mkdir -p build
}

build() {
  cd build
  qmake-qt5 ../$pkgname PREFIX=/usr
  make
}

package() {
  cd build
  make INSTALL_ROOT="$pkgdir" install
}