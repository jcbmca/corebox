/*DashBoard*/

#appTitle{
    background-color: transparent;
    color: #ffffff;
    border: none;}


QWidget [accessibleName="nameBar"]{
    background-color: @color03;
    color: @color07;
    border: none;}

QWidget [accessibleName="shortcut"]{
    background-color: #004275;
    color: @color07;
    border: none;}

QWidget [accessibleName="pages"]{
    background-color: @color01;
    color: @color07;
    border: none;}


QLabel{
    background-color:transparent;
    color: @color07;
    padding: 1px 5px 1px 0px;}


QPushButton{
    background-color: transparent;
    color: @color07;
    border: none;
    Text-align:left;
    padding: 5px 5px 5px 5px;}
QPushButton:pressed{
    background-color: @color04;}
QPushButton:checked{
    ackground-color: @color04;}
QPushButton:hover {
    background-color: @color04;}


QToolButton{
    background-color: transparent;
    color: @color07;
    border: none;
    Text-align:left;
    padding: 5px 5px 5px 5px;}
QToolButton:checked{
    background-color: @color04;}
QToolButton:hover {
    background-color: @color04;}


QListView{
    background-color: transparent;
    color: @color07;
    border: 1px solid @color05;
    padding: 5px 5px 5px 5px;}


QGroupBox {
    font-size: 13px;
    margin-top: -1ex;
    background-color: @color06;
    color: @color07;
    border: none;}
QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    background-color: @color06;
    color:#F3AB79 ;
    padding: 2px 5px 2px 5px;}


QDateTimeEdit {
    background-color: transparent;
    color: @color07;
    border: none;
    padding: 5px 5px 5px 0px;}


QLineEdit{
    background-color: transparent;
    color: @color07;
    border: 1px solid @color05;
    padding: 5px 5px 5px 10px;}


QComboBox {
    background-color: transparent;
    color: @color07;
    border: 1px solid @color05;
    padding: 5px 5px 5px 10px;}
QComboBox QAbstractItemView {
    background-color: #2B2A32;
    color: @color07;
    selection-background-color: #C2C2C2;}
QComboBox::drop-down {
    background-color: #3C3C43;}
QComboBox::down-arrow {
    image: url();}
QComboBox:focus{
    border: 1px solid #C2C2C2;}


QCheckBox {
    background-color: transparent;
    color: #F3AB79;
    border: none;}


QScrollBar:vertical {
    background-color: transparent;
    max-width: 8px;
    border-radius: 4px;
    padding: 1px; }
QScrollBar::handle:vertical {
    background-color: silver;
    max-width: 6px;
    min-height: 12px;
    border-radius: 3px; }
QScrollBar:horizontal {
    background-color: transparent;
    max-height: 8px;
    border-radius: 4px;
    padding: 1px; }
QScrollBar::handle:horizontal {
    background-color: silver;
    max-height: 6px;
    min-width: 12px;
    border-radius: 3px; }
QScrollBar::sub-page:horizontal,
QScrollBar::sub-page:vertical {
    background-color: transparent; }
QScrollBar::add-page:horizontal,
QScrollBar::add-page:vertical {
    background-color: transparent; }
QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    width: 0px; height: 0px; }
QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    width: 0px; height: 0px; }
